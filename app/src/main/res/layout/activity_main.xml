<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tck.daole.MainActivity">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/lineGrey" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="5dp">

            <RadioButton
                android:id="@+id/rb_index"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/tab_index_selector"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/radio_text_selector"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_recharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/tab_recharge_selector"
                android:gravity="center"
                android:text="生活充值"
                android:textColor="@color/radio_text_selector"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_online"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/tab_online_selector"
                android:gravity="center"
                android:text="同城在线"
                android:textColor="@color/radio_text_selector"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_me"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/tab_me_selector"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/radio_text_selector"
                android:textSize="10sp" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>
