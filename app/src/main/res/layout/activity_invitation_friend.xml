<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGrey"
    android:orientation="vertical"
    tools:context="com.tck.daole.activity.PersonalCenterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <View
            android:id="@+id/View"
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/jump_left" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="邀请好友"
                android:textColor="@color/nomalText"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:src="@mipmap/invitation_friend"
        />


    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/rl_yaoqing1"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请好友"
                    android:layout_centerInParent="true"
                    android:textSize="17sp"
                    android:textColor="@color/nomalText"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_yaoqing2"
                android:layout_width="match_parent"
                android:layout_below="@+id/rl_yaoqing1"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大家一起参与"
                    android:layout_centerInParent="true"
                    android:textColor="@color/nomalText"
                    android:textSize="25sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_yaoqing3"
                android:layout_width="match_parent"
                android:layout_below="@+id/rl_yaoqing2"
                android:layout_height="120dp">

                <LinearLayout
                    android:layout_width="245dp"
                    android:layout_height="76dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@mipmap/invitation_weixin"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="微信好友"
                            android:layout_below="@+id/img1"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/nomalText"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@mipmap/invitation_pengyouquan"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="朋友圈"
                            android:layout_below="@+id/img2"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/nomalText"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@mipmap/invitation_qq"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="qq好友"
                            android:layout_below="@+id/img3"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/nomalText"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        >

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@mipmap/invitation_kongjian"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="qq空间"
                            android:layout_below="@+id/img4"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/nomalText"
                            />
                        />

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_yaoqing4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rl_yaoqing3"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/hintColor"
                    android:text="活动详情" />
            </RelativeLayout>



        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>
