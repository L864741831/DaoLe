<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_collection_shangpin__dianpu_item"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/def" />

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/ll_collection_dianpu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_collection_dianpu_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="店铺名"
                android:textColor="@color/nomalText"
                android:textSize="14sp" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.5km"
                android:textColor="@color/hintColor"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:numStars="5"
                android:progressTint="@color/yellows"
                android:rating="4.7" />

            <TextView
                android:id="@+id/tv_ratingBar_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.7"
                android:textColor="@color/hintColor"
                android:textSize="10dp" />

            <TextView

                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
 />

            <TextView
                android:id="@+id/item_collection_dianpu_juli"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.5km"
                android:textColor="@color/hintColor"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="@color/hintColor"
            android:textSize="2dp" />

        <TextView
            android:id="@+id/item_collection_dianpu_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="起送¥20|配送¥4"
            android:textColor="@color/hintColor"
            android:textSize="11dp" />
    </LinearLayout>






    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_collection_shangpin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/item_collection_shangpin_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="这是饭的名字"
                android:textColor="@color/nomalText"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_collection_shangpin_jiage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥111"
                android:textColor="@color/red"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/item_collection_shangpin_jieshao"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="饭的口味介绍之类的"
            android:textColor="@color/gray"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/item_collection_shangpin_yueshou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="月售 1234"
                android:textColor="@color/hintColor"
                android:textSize="10sp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_shop_jiaHao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_jiahao" />

            <LinearLayout
                android:id="@+id/ll_shop_jiaJian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_shop_jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_jian" />

                <TextView
                    android:id="@+id/tv_shop_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:text="1"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_shop_jia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_jia" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>