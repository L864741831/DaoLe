<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGrey"
    android:orientation="vertical"
    tools:context="com.tck.daole.activity.PersonalCenterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/View"
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/jump_left" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="提现"
                android:textColor="@color/nomalText"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        >

        <RelativeLayout
            android:id="@+id/rl_daozhang"
            android:layout_width="130dp"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="15dp"
                android:text="到账银行卡"
                android:textColor="@color/nomalText"
                android:textSize="12dp"
                android:id="@+id/textView3" />

        </RelativeLayout>


        <TextView
            android:layout_width="130dp"
            android:layout_height="15dp"
            android:layout_marginLeft="41.5dp"
            android:layout_marginStart="81dp"
            android:text="**** **** **** 1234"
            android:layout_centerVertical="true"
            android:textColor="@color/gray"
            android:textSize="12dp"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="107dp"
            android:layout_height="11.5dp"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:text="两小时后到账"
            android:textColor="@color/gray"
            android:textSize="10dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tixian"
        android:layout_width="345dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/white"

        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="48dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="14.5dp"
            android:text="提现金额"
            android:textColor="@color/nomalText"
            android:textSize="12dp" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginBottom="38dp"
            android:text="¥"
            android:textColor="@color/nomalText"
            android:textSize="12dp"
            android:id="@+id/textView6" />

        <EditText
            android:id="@+id/et_tixian"
            android:layout_width="240dp"
            android:layout_height="40dp"

            android:layout_alignTop="@+id/textView6"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:background="@color/backGrey"
            android:hint="请输入充值金额"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_tixian"
            android:layout_alignLeft="@+id/et_tixian"
            android:visibility="visible"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额 ¥2999，"
                android:textSize="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部提现"
                android:textColor="@color/orange"
                android:textSize="10dp"
                />

        </LinearLayout>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        >

        <Button
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@color/orange"
            android:text="提现"
            android:textColor="@color/white"

            />

    </RelativeLayout>




















</LinearLayout>
