<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="2dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_order_mainImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@mipmap/def" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称名称"
            android:textColor="@color/gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_order_content_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注备注备注备注备注备注备注备注"
            android:textColor="@color/hintColor"
            android:textSize="10sp"
            android:maxLines="3"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_order_content_purchaseNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"
            android:textColor="@color/hintColor"
            android:textSize="10sp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_order_content_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥111"
        android:textColor="@color/red"
        android:textSize="12sp" />
</LinearLayout>
