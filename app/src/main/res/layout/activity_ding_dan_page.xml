<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGrey"
    android:orientation="vertical"
    tools:context="com.tck.daole.activity.PersonalCenterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/View"
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/jump_left" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="订单"
                android:textColor="@color/nomalText"
                android:textSize="18sp" />
        </RelativeLayout>






        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/top_tab_height"
            android:background="@color/white" >

            <TextView
                android:id="@+id/tv_order_daifukuan"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="待付款"
                android:textStyle="bold"
                android:textColor="@color/hintColor"
                android:textSize="@dimen/main_top_tab_text_size" />

            <TextView
                android:id="@+id/tv_order_daishouhuo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="待收货"
                android:textStyle="bold"
                android:textColor="@color/hintColor"
                android:textSize="@dimen/main_top_tab_text_size" />

            <TextView
                android:id="@+id/tv_order_yishouhuo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="已收货"
                android:textStyle="bold"
                android:textColor="@color/hintColor"
                android:textSize="@dimen/main_top_tab_text_size" />

            <TextView
                android:id="@+id/tv_order_tuikuantuihuo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="退款退货"
                android:textStyle="bold"
                android:textColor="@color/hintColor"
                android:textSize="@dimen/main_top_tab_text_size" />

            <TextView
                android:id="@+id/tv_order_tquanbudingdan"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="全部订单"
                android:textStyle="bold"
                android:textColor="@color/hintColor"
                android:textSize="@dimen/main_top_tab_text_size" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_height"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:background="@color/black"
            >

            <ImageView
                android:id="@+id/cursor"
                android:layout_width="@dimen/main_matrix_width"
                android:layout_height="@dimen/main_line_height"
                android:scaleType="matrix"
                android:src="@color/orange" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"/>


        <android.support.v4.view.ViewPager
            android:id="@+id/vPager"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" />










    </LinearLayout>




















</LinearLayout>
