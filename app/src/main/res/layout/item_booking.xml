<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_booking"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:src="@mipmap/def" />

        <TextView
            android:id="@+id/tv_booking_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="11dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="这是商品名称"
            android:textColor="@color/nomalText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_booking_ctime_ftime"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:lines="1"
            android:layout_marginTop="2dp"
            android:text="开放时间段9:00-17:00"
            android:textColor="@color/hintColor"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_booking_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="¥10"
                android:textColor="@color/red"
                android:textSize="15sp"
                 />

            <TextView
                android:id="@+id/tv_booking_sellNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售1999"
                android:layout_marginLeft="40dp"
                android:textSize="10sp"
                android:layout_centerVertical="true"
                 />

            <Button
                android:layout_width="44dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="购买"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:background="@color/orange"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>